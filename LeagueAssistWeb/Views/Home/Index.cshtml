@model IEnumerable<LeagueAssistWeb.Models.PlayerListViewModel>

@{
    ViewBag.Title = "Popis igrača";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPlayer", new { id=item.Id }) |
            @Html.ActionLink("Details", "PlayerDetails", new { id=item.Id }) |
            @Html.ActionLink("End Contract", "EndPlayerContract", new { id=item.Id })
        </td>
    </tr>
}

</table>
